<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".principal">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/ly_detalles_ll">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/ly_detalles_iv_icon"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Autor"
                android:id="@+id/ly_detalles_tv_autor"
                android:textSize="@dimen/text23"
                android:textColor="@color/leosap_azul_oscuro"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/gradient_gris"
                android:gravity="bottom"
                android:paddingLeft="@dimen/margin10"
                android:paddingBottom="@dimen/margin5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Precio"
                android:id="@+id/ly_detalles_tv_precio"
                android:textSize="@dimen/text23"
                android:textColor="@color/leosap_azul_oscuro"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin5" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView"
                android:background="@color/leosap_gris_claro">

                <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin10"
                    android:layout_marginLeft="@dimen/margin10" >

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Categoria"
                    android:id="@+id/ly_detalles_tv_categoria"
                    android:textSize="@dimen/text20"
                    android:textColor="@color/leosap_azul_oscuro"
                    android:layout_marginTop="@dimen/margin20" />

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Resumen"
                    android:id="@+id/ly_detalles_tv_resumen"
                    android:textSize="@dimen/text18"
                    android:textColor="@color/leosap_azul"
                    android:layout_marginTop="@dimen/margin10"
                    android:layout_marginBottom="@dimen/margin10" />

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Fecha lanzamiento"
                    android:id="@+id/ly_detalles_tv_fecha"
                    android:textSize="@dimen/text20"
                        android:textColor="@color/leosap_azul_oscuro"
                        android:layout_marginBottom="@dimen/margin10" />

                </LinearLayout>
            </ScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/gradient_gris_inverso"
                android:id="@+id/rl"></RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
